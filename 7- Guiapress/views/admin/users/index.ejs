<%- include ("../../partials/header.ejs")%>
<%- include ("../../partials/navbar.ejs")%>

<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a class="btn btn-success" href="/admin/users/create"> Criar novo usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => {%> 
                <tr>
                    <th> <%=user.id%></th>
                    <th> <%=user.email%></th>
                    <th>
                        <form action="/users/delete" method="POST" style="display: inline;" onsubmit= "confirmarDelecao(event, this)" >
                            <input type="hidden" name="id" value="<%= user.id%>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
            <%}); %>
        </tbody>
    </table>
</div>

<%- include ("../../partials/footer.ejs")%>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Você quer deletar esta categoria?")
        if(decision){
            form.submit()
        }
    }
</script>